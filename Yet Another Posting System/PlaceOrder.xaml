<Window x:Class="Yet_Another_Posting_System.PlaceOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yet_Another_Posting_System"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="PlaceOrder" Height="250" Width="500">
    <Grid x:Name="mainGrid">
        <TextBox x:Name="senderAddressBox" HorizontalAlignment="Center" Margin="0,50,0,5" TextWrapping="Wrap" Text="Sender Address" VerticalAlignment="Top" Width="440" TextAlignment="Center" IsEnabled="False" Background="#FFE5E5E5"/>
        <TextBox x:Name="receiverAddressBox" HorizontalAlignment="Center" Margin="0,73,0,5" TextWrapping="Wrap" Text="Receiver Address" VerticalAlignment="Top" Width="440" TextAlignment="Center" IsEnabled="False" Background="#FFE5E5E5"/>
        <Grid HorizontalAlignment="Center" Height="26" Margin="0,98,0,0" VerticalAlignment="Top" Width="440">
            <ComboBox x:Name="contentBox" HorizontalAlignment="Left" Margin="86,0,0,0"  VerticalAlignment="Center" Width="134" IsEnabled="False">
                <ComboBoxItem Content="Object"/>
                <ComboBoxItem Content="Documents"/>
                <ComboBoxItem Content="Breakable"/>
            </ComboBox>
            <Label Content="Post Content" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="False"/>
            <Label Content="Post Type" HorizontalAlignment="Left" Margin="225,0,0,0" VerticalAlignment="Center" IsEnabled="False"/>
            <ComboBox x:Name="postTypeBox" HorizontalAlignment="Left" Margin="293,0,0,0" VerticalAlignment="Center" Width="147" IsEnabled="False">
                <ComboBoxItem Content="Normal"/>
                <ComboBoxItem Content="Prime"/>
            </ComboBox>
        </Grid>
        <Grid HorizontalAlignment="Center" Height="18" Margin="0,129,0,0" VerticalAlignment="Top" Width="440">
            <CheckBox x:Name="expensiveCheckBox" Content="Expensive" HorizontalAlignment="Left" VerticalAlignment="Center" Width="81" IsEnabled="False"/>
            <TextBox x:Name="weightBox" InputScope="Number" HorizontalAlignment="Left" Margin="86,0,0,0" TextWrapping="Wrap" Text="Weight" VerticalAlignment="Center" Width="120" TextAlignment="Center" IsEnabled="False" Background="#FFE5E5E5"/>
            <TextBox x:Name="phoneBox" InputScope="Number" HorizontalAlignment="Left" Margin="220,0,0,0" TextWrapping="Wrap" Text="Phone Number" VerticalAlignment="Center" Width="220" TextAlignment="Center" IsEnabled="False" Background="#FFE5E5E5"/>
        </Grid>
        <Grid HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Width="264" Margin="0,16,0,0">
            <TextBox x:Name="customerIDBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Customer ID" VerticalAlignment="Center" Width="202" TextAlignment="Center" Height="20"/>
            <Button x:Name="idSearchButton" Content="Search" HorizontalAlignment="Left" Margin="207,0,0,0" VerticalAlignment="Bottom" Width="57" Click="idSearchButton_Click"/>
        </Grid>
        <Grid HorizontalAlignment="Center" Height="26" VerticalAlignment="Top" Width="202" Margin="0,153,0,0">
            <Label Content="Cost" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="False"/>
            <TextBlock x:Name="costBlock" HorizontalAlignment="Left" Margin="69,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="133" Background="#FFF7F7F7"/>
        </Grid>
        <Grid HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Width="210" Margin="0,184,0,0" IsEnabled="False">
            <Button x:Name="calculateButton" Content="Calculate Cost" HorizontalAlignment="Left" VerticalAlignment="Center" Width="96" IsEnabled="False" Click="calculateButton_Click"/>
            <Button x:Name="placeOrderButton" Content="Place Order" HorizontalAlignment="Left" Margin="109,0,0,0" VerticalAlignment="Center" Width="101" IsEnabled="False" Click="placeOrderButton_Click"/>
        </Grid>
    </Grid>
</Window>
